<?xml version="1.0" encoding="utf-8"?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:local="clr-namespace:PassGen.Maui;assembly=PassGen.Maui"
      x:Class="PassGen.Maui.ButtonWithGreenClick"
      x:Name="_mainGrid">
    <Button/>
    <Button x:Name="_btnGreen" BackgroundColor="Green" Opacity="0"/>
    <Button x:Name="_btnClick" BackgroundColor="Transparent" 
        Text="{Binding Source={x:Reference _mainGrid}, Path=Text}"/>
</Grid>